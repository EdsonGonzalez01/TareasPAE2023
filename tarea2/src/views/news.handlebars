<h1 class="text-center">{{title}}</h1>

<div class="text-center mb-3">
    <a href="/" class="btn btn-info">Back to Home</a>
</div>

<form action="/news" method="GET" class="text-center">
    <div class="input-group mb-3">
        <input type="text" name="q" class="form-control" value="{{keyword}}">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="row">
    {{#each news}}
    <div class="col-md-4 mb-4">
        <div class="card">
            <img src={{urlToImage}} class="card-img-top" alt="New Image">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <p class="card-text">{{description}}</p>
                <a href="{{url}}" target="_blank" class="btn btn-primary">Read more</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
